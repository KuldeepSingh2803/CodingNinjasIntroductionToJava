import java.util.*;
public class Main {
	
	public static void main(String[] args) 
    {
        Scanner scan = new Scanner(System.in);
        int  n=scan.nextInt();
        String binary="";
        if(n==0)
        {
            System.out.print(n);
        }
        while(n>0)
        {
        	int rem=n%2;
        	n=n/2;
        	
        	binary=rem + binary;
        	
        }
        System.out.print(binary);
        
		

	}
}
